{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 400,
  "height": 300,
  "data": {"url": "https://raw.githubusercontent.com/Airius2001/3179/main/cleaned.csv"},
  "layer": [
    {
      "mark": {
        "type": "line",
        "point": true
      },
      "encoding": {
        "x": {
          "field": "year",
          "type": "quantitative",
          "axis": {"format": "d"},
          "title": "Year"
        },
        "y": {
          "aggregate": "sum",
          "field": "Prisoner_sum",
          "type": "quantitative",
          "scale": {"domain": [1000000, 1400000]},
          "title": "Prisoner count by each year"
        },
        "tooltip": [
          {"field": "year", "type": "nominal", "title": "Year: "},
          {"field": "sum_Prisoner_sum", "type": "quantitative", "title": "Number Of Prisoner: "}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": 170,
        "dy":-140,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text":{"value": "2009 - Highest Crime Records"},
        "color":{"value": "black"},
        "opacity":{
          "condition":{
            "test": "datum['year'] == '2009' ",
            "value": 1
          },
          "value": 0
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -60,
        "dy":20,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text":{"value": "2001 - Lowest Crime Records"},
        "color":{"value": "black"},
        "opacity":{
          "condition":{
            "test": "datum['year'] == '2001' ",
            "value": 1
          },
          "value": 0
        }
      }
    }
  ]
}
